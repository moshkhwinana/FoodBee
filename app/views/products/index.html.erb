<div class="container m-4 p-4">
  <h2>Products</h2>

  <div class="card mt-3"></div>
    <ul>
      <% @products.each do |product| %>
      <li><%= product.product_name %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to "Delete", product_path(product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
          <%= product.description %>
      <% end %>
    </ul>
    <%= link_to 'Add a product', new_product_path %>
  </div>

</div>
