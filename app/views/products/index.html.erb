<div class='container justify-content-center' data-controller="search-products">
  <div class='heading-div text-center'>
    <h1>Your Ingredients</h1>
    <%= link_to new_product_path, class: 'btn btn-outline add-ingredient-btn' do %>
      <i class="fa-solid fa-circle-plus"></i>
    <% end %>  </div>
  <div class="products-index-form-wrapper my-4">
    <%= form_with url: products_path, method: :get, html: {data: {search_products_target: "form"}} do |f| %>
      <%= f.text_field :query,
                        class: "form-control",
                        value: params[:query],
                        placeholder: "Search products...",
                        data: {search_products_target: "input", action: "keyup->search-products#update"} %>
    <% end %>
  </div>

  <%= render "products_list", products: @products %>

</div>
