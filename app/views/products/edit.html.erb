<div class="container m-4">
  <h2 class='text-center'>Edit product</h2>

  <div class='card-form d-flex justify-content-center'>
    <p><%= form_with model: @product do |f| %></p>
      <p><%= f.label :add_a_product_name_pookie %></p>
      <p><%= f.text_field :product_name %></p>
      <p><%= f.label :edit_your_description_pookie? %></p>
      <p><%= f.text_field :description%></p>
      <p><%= f.submit :updatepooks %></p>
    <p><% end %></p>
  </div>
</div>
