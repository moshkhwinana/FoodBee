<div class="container my-3 align-items-center text-dark">
  <h1>Learn, Cook, & Eat your food</h1>
  <%= link_to "MORE RECIPES", generate_recipes_path, class: "btn mt-4", data: {turbo_method: :post} %>
  <!-- <h2>New AI recipes</h2>
  <h2>Don't know what to cook, we got you</h2>-->
 <!-- <h2 class="h2 mt-4">Past recipes</h2>-->
  <div>
    <% @recipes.each do |recipe| %>
      <div class="card mt-4 d-flex justify-content-between align-items-center">
        <span>
        <%= link_to recipe.recipe_name, recipe_path(recipe) %>
        <%= link_to recipe_favourites_path(recipe), class: "favourite-button", data: {turbo_method: :post} do %>
          <i class="fa-solid fa-heart"></i>
        <% end %>
        </span>
        <p style="font-size: 12px; margin: 0;">created at: <%= recipe.created_at %></p>
        <span style="font-size: 10px; color: #666;">
          <i class="fa-regular fa-clock"></i> Prep Time: <%= recipe.prep_time %>
        </span>
      </div>
      <%#= button_to 'Favorite', new_favorite_path(recipe) %>
    <% end %>
  </div>
</div>

